<phpdox xmlns="http://phpdox.net/config">
 <project name="PHP_Project" source="../applications" workdir="phpdox">
  <collector publiconly="false">
   <include mask="*.php" />
  </collector>

  <generator output=".">
   <enrich base="logs">
    <source type="checkstyle" />
   </enrich>

   <build engine="html" enabled="true" output="api">
    <file extension="html" />
   </build>
  </generator>
 </project>
</phpdox>
